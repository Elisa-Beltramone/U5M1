{{!-- tabla --}}
<div class="row">
  <div class="col">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Titulo</th>
          <th scope="col">Imagen</th>
          <th scope="col" class="text-right">Acciones</th>
        </tr>
      </thead>
      <tbody>
        {{#each novedades}}
        <tr>
          <th scope="row">{{id}}</th>
          <td>{{titulo}}</td>
          <td>{{{imagen}}}</td>
          <td class="text-right">
            <a href="/admin/novedades/modificar/{{id}}" class="btn btn-secondary"> <i
                class="fas fa-pencil-alt"></i></i></a>
            <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-secondary"><i class="fas fa-trash"></i></a>
          </td>
          {{/each}}
        </tr>
      </tbody>
    </table>
  </div>
